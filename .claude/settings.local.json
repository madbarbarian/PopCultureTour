{
  "permissions": {
    "allow": [
      "Bash(claude doctor)",
      "Bash(npm i:*)",
      "Bash(claude --version)",
      "Bash(npm ls:*)",
      "Bash(npm cache clean:*)",
      "Bash(npm uninstall:*)",
      "Bash(npm install:*)",
      "Bash(git init:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(gh:*)",
      "Bash(git push:*)",
      "Bash(git rebase:*)",
      "WebSearch",
      "Bash(find:*)",
      "WebFetch(domain:github.com)",
      "WebFetch(domain:zenn.dev)",
      "Bash(afplay:*)",
      "Bash(gcloud:*)",
      "Bash(gemini:*)",
      "WebFetch(domain:generativelanguage.googleapis.com)",
      "WebFetch(domain:cloud.google.com)",
      "Read(//Users/madbarbarian/.config/**)",
      "Read(//Users/madbarbarian/.codex/**)",
      "Bash(codex:*)",
      "Bash(open:*)",
      "Read(//Users/madbarbarian/.claude/**)",
      "Bash(pip --version)",
      "Bash(pip3:*)",
      "Read(//usr/local/bin/**)",
      "Bash(sudo rm:*)",
      "Bash(pipx:*)",
      "Bash(gh repo create:*)",
      "Bash(git clone:*)",
      "Bash(git pull:*)",
      "Bash(mv:*)",
      "Bash(git remote add:*)",
      "Bash(git fetch:*)"
    ],
    "deny": [
      "Read(./.env)",
      "Read(./.env.*)",
      "Read(./secrets/**)",
      "Read(./config/credentials.json)",
      "Read(./build)"
    ]
  },
  "enableAllProjectMcpServers": true,
  "enabledMcpjsonServers": [
    "supabase",
    "codex",
    "context7",
    "chrome-devtools",
    "filesystem",
    "youtube",
    "veo3",
    "powerpoint",
    "excel",
    "microsoft365",
    "figma",
    "ffmpeg",
    "mulmocast-vision",
    "github",
    "slack",
    "perplexity",
    "serena",
    "playwright",
    "notion",
    "gemini",
    "gemini-cli"
  ],
  "hooks": {
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "afplay /System/Library/Sounds/Glass.aiff"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|MultiEdit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "jq -r '.tool_input.file_path' | { read file_path; if echo \"$file_path\" | grep -q '\\.ts$'; then npx prettier --write \"$file_path\"; fi; }"
          }
        ]
      }
    ]
  }
}