{
    "mcpServers": {
      "supabase": {
        "command": "npx",
        "args": [
          "-y",
          "@supabase/mcp-server-supabase"
        ],
        "env": {
          "SUPABASE_ACCESS_TOKEN": "${SUPABASE_ACCESS_TOKEN}",
          "SUPABASE_PROJECT_REF": "${SUPABASE_PROJECT_REF}"
        }
      },
      "codex": {
        "type": "stdio",
        "command": "codex",
        "args": ["mcp"]
      },
      "context7": {
        "command": "npx",
        "args": ["-y", "@upstash/context7-mcp@latest", "--api-key", "${CONTEXT7_API_KEY}"]
      },
      "chrome-devtools": {
        "command": "npx",
        "args": ["-y", "chrome-devtools-mcp@latest"]
      },
      "file-system": {
        "command": "npx",
        "args": [
          "-y",
          "@modelcontextprotocol/server-filesystem",
          "${FILESYSTEM_PATH_1}",
          "${FILESYSTEM_PATH_2}"
        ]
      },
      "youtube": {
        "command": "npx",
        "args": ["-y", "@kirbah/mcp-youtube@latest"]
      },
      "veo3": {
        "command": "python3",
        "args": ["-m", "mcp_veo3", "--output-dir", "/tmp/veo3_videos"],
        "env": {
          "GEMINI_API_KEY": "${GEMINI_API_KEY}"
        }
      },
      "figma-developer-mcp": {
        "command": "npx",
        "args": ["-y", "figma-developer-mcp", "--stdio"],
        "env": {
          "FIGMA_API_KEY": "${FIGMA_API_KEY}"
        }
      },
      "ffmpeg": {
        "command": "npx",
        "args": ["-y", "ffmpeg-mcp@latest"]
      },
      "mulmocast-vision": {
        "command": "npx",
        "args": ["mulmocast-vision@latest"]
      },
      "github": {
        "command": "npx",
        "args": ["-y", "@modelcontextprotocol/server-github"],
        "env": {
          "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_PERSONAL_ACCESS_TOKEN}"
        }
      },
      "slack": {
        "command": "npx",
        "args": ["-y", "@modelcontextprotocol/server-slack"],
        "env": {
          "SLACK_BOT_TOKEN": "${SLACK_BOT_TOKEN}",
          "SLACK_TEAM_ID": "${SLACK_TEAM_ID}"
        }
      },
      "perplexity": {
        "command": "npx",
        "args": ["-y", "perplexity-mcp@latest"],
        "env": {
          "PERPLEXITY_API_KEY": "${PERPLEXITY_API_KEY}"
        }
      },
      "serena": {
        "command": "uvx",
        "args": ["--from", "git+https://github.com/oraios/serena", "serena", "start-mcp-server"]
      },
      "playwright": {
        "command": "npx",
        "args": ["-y", "@playwright/mcp"]
      },
      "notion": {
        "command": "npx",
        "args": ["-y", "@notionhq/notion-mcp-server"],
        "env": {
          "NOTION_API_KEY": "${NOTION_API_KEY}"
        }
      },
      "gemini": {
        "command": "npx",
        "args": ["-y", "gemini-mcp-tool@latest"],
        "env": {
          "GOOGLE_API_KEY": "${GOOGLE_API_KEY}"
        }
      },
      "stripe": {
        "command": "npx",
        "args": ["-y", "@stripe/mcp@latest", "--api-key", "${STRIPE_SECRET_KEY}"]
      },
      "tavily": {
        "command": "npx",
        "args": ["-y", "@tavily/mcp-server@latest"],
        "env": {
          "TAVILY_API_KEY": "${TAVILY_API_KEY}"
        }
      }
    }
  }
  